<UserControl x:Class="GUI_Project.Registration_User_Control.myOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" Name="myOption1">
    <StackPanel Orientation="Horizontal" >
        <Button Style="{StaticResource roundButton}">
            <fa:ImageAwesome  Icon="{Binding Path=Icon,ElementName=myOption1}" Width="15" Height="15" Foreground="White"/>
        </Button>

        <TextBlock  Text="{Binding Path=Text,ElementName=myOption1}" Foreground="#363636" VerticalAlignment="Center" Margin="10 20 20 0" FontWeight="SemiBold"/>
    </StackPanel>
</UserControl>
